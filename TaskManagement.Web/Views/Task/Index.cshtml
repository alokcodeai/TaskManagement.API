@model List<TaskManagement.Web.Models.TaskViewModel>

@{
    ViewData["Title"] = "Task Management";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-primary">📋 Task Management</h3>
        <a asp-action="Create" class="btn btn-success">
            ➕ Create Task
        </a>
    </div>

    <form method="get" asp-action="Index" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text"
                   name="searchText"
                   value="@ViewBag.SearchText"
                   class="form-control"
                   placeholder="🔍 Search by Title / Description / Status" />
        </div>

        <div class="col-md-3">
            <select name="status" class="form-select">
                <option value="">-- All Status --</option>
                <option value="Open" selected="@(ViewBag.Status=="Open")">Open</option>
                <option value="InProgress" selected="@(ViewBag.Status=="InProgress")">In Progress</option>
                <option value="Completed" selected="@(ViewBag.Status=="Completed")">Completed</option>
            </select>
        </div>

        <div class="col-md-3">
            <button type="submit" class="btn btn-primary">
                Search
            </button>
            <a asp-action="Index" class="btn btn-secondary ms-1">
                Reset
            </a>
        </div>
    </form>


    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Status</th>
                <th>Due Date</th>
                <th>Remark</th>
                <th>Created On</th>
                <th>Updated On</th>
                <th>Creaeted By</th>
                <th>Updated By</th>
                <th style="width:160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            <span class="badge 
                                @(item.Status == "Completed" ? "bg-success" :
                                  item.Status == "InProgress" ? "bg-warning text-dark" :
                                  "bg-secondary")">
                                @item.Status
                            </span>
                        </td>

                        <td>@item.DueDate?.ToString("dd-MMM-yyyy")</td>
                        <td>@item.Remarks</td>
                        <td>@item.CreatedOn?.ToString("dd-MM-yyyy")</td>
                        <td>@item.UpdatedOn?.ToString("dd-MM-yyyy")</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.UpdatedBy</td>


                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary">Edit</a>

                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Are you sure?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">
                        No tasks found
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
